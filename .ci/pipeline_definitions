egress-filter-refresher:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess:
          'inject-commit-hash'
      publish:
        oci-builder: docker-buildx
        platforms:
        - linux/amd64
        - linux/arm64
        dockerimages:
          egress-filter-refresher:
            inputs:
              repos:
                source: ~ # default
            registry: 'gcr-readwrite'
            image: 'eu.gcr.io/gardener-project/gardener/egress-filter-refresher'
            dockerfile: 'updater/Dockerfile'
          egress-filter-blackholer:
            registry: 'gcr-readwrite'
            image: 'eu.gcr.io/gardener-project/gardener/egress-filter-blackholer'
            dockerfile: 'blackholer/Dockerfile'
          egress-filter-firewaller:
            registry: 'gcr-readwrite'
            image: 'eu.gcr.io/gardener-project/gardener/egress-filter-firewaller'
            dockerfile: 'firewaller/Dockerfile'
    steps: ~
  jobs:
    head-update:
      traits:
        draft_release: ~
        component_descriptor: ~
    pull-request:
      traits:
        pull-request: ~
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
        slack:
          default_channel: 'internal_scp_workspace'
          channel_cfgs:
            internal_scp_workspace:
              channel_name: 'C9CEBQPGE' #sap-tech-gardener
              slack_cfg_name: 'scp_workspace'
        component_descriptor:
          component_name: 'github.com/gardener/egress-filter-refresher'
